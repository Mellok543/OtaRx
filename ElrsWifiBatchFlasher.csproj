<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <!-- Keep the WiFi flasher project isolated from the TTLRx project files. -->
    <ItemGroup>
        <Compile Remove="TTLRx\**\*.cs" />
        <Page Remove="TTLRx\**\*.xaml" />
        <ApplicationDefinition Remove="TTLRx\**\*.xaml" />
        <None Remove="TTLRx\**\*" />
    </ItemGroup>

</Project>
